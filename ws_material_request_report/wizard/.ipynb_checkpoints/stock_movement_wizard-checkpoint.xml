<odoo>
  <data>
            <!--Display form view of wizard-->    
            <record id="view_stock_movement_wizard_form" model="ir.ui.view">
                <field name="name">stock.movement.wizard.form</field>
                <field name="model">stock.movement.wizard</field>
                <field name="arch" type="xml">
                    <form string="Movement Report">
                        <group>  
                           <group>
                                  <field name="date_from" />
                                  <field name="categ_id" />
                          </group>

                          <group>
                                  <field name="date_to" />
                          </group> 
                             <notebook>
                            <page string='Locations'>
                                <field name='location_ids'>
                                    <tree>
                                        <field name='name'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        </group>
                        
                       
                         
                        <footer>
                            <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                            <button string="Cancel" class="btn-default" special="cancel"/>
                        </footer>
                    </form>
                </field>
              </record>

            <!--Open the date wise wizard on click of menu-->
            <record id="open_stock_movement_wizard_action" model="ir.actions.act_window">
                <field name="name">Stock Movement Report</field>
                <field name="res_model">stock.movement.wizard</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
                <field name="view_id" ref="view_stock_movement_wizard_form"/>
            </record>
      
      
            <menuitem id="menu_stock_movement_rept" name="Stock Movement Report" parent="stock.menu_warehouse_report"  action='open_stock_movement_wizard_action'
             sequence="10"/>
      
      
      
  </data>
</odoo>