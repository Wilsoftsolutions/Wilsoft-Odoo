<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_res_partner_ebizcharge" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <field name = "ach_functionality_hide" invisible="1"/>
                    <button type="action" class="oe_stat_button"
                            icon="fa-bank"
                            name="%(payment_ebizcharge.action_payment_token_tree)d"
                            context="{'search_default_partner_id': active_id, 'create': False, 'edit': False}"
                            attrs="{'invisible': ['|',('payment_token_ach_count', '=', 0),('ach_functionality_hide', '=', False)]}">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="payment_token_ach_count" widget="statinfo" nolabel="1"/>
                            </span>
                            <span class="o_stat_text">Bank Accounts</span>
                        </div>
                    </button>
                 </xpath>
                <sheet position='before'>
                    <field name = "ach_functionality_hide" invisible="1"/>
                    <field name = "card_functionality_hide" invisible="1"/>
                    <header>
                        <field name="customer_rank" invisible="1"/>
                        <field name="ebiz_auto_sync" invisible="1"/>
                        <field name="ebiz_internal_id" invisible="1"/>
                        <field name="request_payment_method_sent" invisible="1"/>
                        <button name="sync_to_ebiz_ind" type="object" string="EBizCharge Upload" class="oe_highlight" attrs="{'invisible': ['|', '|',('customer_rank', '=', 0), ('ebiz_internal_id','!=',False), ('ebiz_auto_sync','=', True)]}"/>
                        <button name="ebiz_request_payment_method" type="object" string="Request Payment Method" class="oe_highlight"/>
                        <button name="add_new_card" type="object" string="Add New Card" class="oe_highlight" attrs="{'invisible': [('card_functionality_hide', '=', False)]}"/>
                        <button name="add_new_ach" type="object" string="Add New Bank Account" class="oe_highlight" attrs="{'invisible': [('ach_functionality_hide', '=', False)]}" />
                    </header>
                </sheet>
                <field name="vat" position="after">
                    <field name="id" string="Customer Id" readonly='1'/>
                    <field name="sync_status" readonly='1'/>
                </field>
                <notebook position = 'inside'>
                    <page name="ebiz_payments_credit_card" string="Credit Cards" attrs="{'invisible': [('card_functionality_hide', '=', False)]}">
                        <field name="ebiz_credit_card_ids" context="{'default_is_ebiz_charge': True}" mode="tree" >
                            <form>
                                <group>
                                    <group>
                                        <field name="card_number"  readonly="1"/>
                                        <field name="card_exp_month" />
                                        <field name="card_exp_year" />
                                        <field name="card_code"  />
                                    </group>
                                    <group>
                                        <field name="account_holder_name" readonly="1"/>
                                        <field name="avs_street" readonly="1"/>
                                        <field name="avs_zip"  readonly="1"/>
                                        <field name="acquirer_id" invisible="1"/>
                                        <field name="is_default" widget="boolean_toggle"/>
                                    </group>
                                </group>
                            </form>
                            <tree create="0" delete="1">
                                <field name="account_holder_name" string="Name on Card" readonly="1" />
                                <field name="card_number" readonly="1"/>
                                <field name="avs_street" readonly="1"/>
                                <field name="avs_zip" readonly="1"/>
                                <field name="card_exp_date"/>
                                <field name="is_default" widget="boolean_toggle"/>
                                <button name="delete_token" type="object" class="fa fa-trash-o" aria-label="Delete row 1"/>
                                <button name="open_edit" type="object" class="fa fa-pencil"/>
                            </tree>
                        </field>
                    </page>
                    <page name="ebiz_payments_bank" string="Bank Accounts" attrs="{'invisible': [('ach_functionality_hide', '=', False)]}">
                        <field name="ebiz_ach_tokens" context="{'default_is_ebiz_charge': True}" domain="[('account_type','=','Checking')]" mode="tree">
                            <form>
                                <group>
                                    <group>
                                        <field name="account_holder_name" />
                                        <field name="account_number" readonly="1"/>
                                        <field name="routing" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="account_type" />
                                        <field name="is_default" widget="boolean_toggle"/>
                                    </group>
                                </group>
                            </form>

                            <tree create="0" delete="1">
                                <field name="account_holder_name" />
                                <field name="account_number" readonly="1"/>
                                <field name="routing" readonly="1"/>
                                <field name="account_type" />
                                <field name="is_default" widget="boolean_toggle" readonly="1"/>
                                <button name="delete_token" type="object" class="fa fa-trash-o" aria-label="Delete row 1"/>
                                <button name="open_edit" type="object" class="fa fa-pencil"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>
        <record id="view_res_partner_upload_tree" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name = "name" string="Customer"/>
                    <field name = "id" string="Customer ID"/>
                    <field name = "email" />
                    <field name = "phone" string="Phone Number"/>
                    <field name = "street"/>
                    <field name = "city"/>
                    <field name = "country_id"/>
                    <field name = "last_sync_date"/>
                    <field name = "sync_response"/>
                </tree>
            </field>
        </record>

        <record id="view_partner_inherit_status_tree" model="ir.ui.view">
            <field name="name">res.partner.followup.inherit.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="vat" position="after">
                    <field name="sync_status" optional="show"/>
                </field>
            </field>
        </record>
        <record id="action_res_partner_sync_tree" model="ir.actions.act_window">
            <field name="name">Upload Customers</field>
            <field name="res_model">res.partner</field>
            <field name='view_mode'>tree</field>
            <field name="domain">[('customer_rank','>', 0)]</field>
            <field name="context">{'ebiz_upload_customer_action':1}</field>
            <field name='view_id' ref="view_res_partner_upload_tree"/>
        </record>

