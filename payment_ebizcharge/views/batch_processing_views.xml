<odoo>
    <data>
        <record id="wizard_batch_process_message_view" model="ir.ui.view">
            <field name="name">batch.process.message</field>
            <field name="model">batch.process.message</field>
            <field name="arch" type="xml">
                <form string="Message">

                    <div>
                            <field name="success_count" nolabel="1" readonly="1"/> out of <field name="total" nolabel="1" readonly="1"/> invoices were successfully processed!
                    </div>
                    <br/>
                    <field name="lines_ids" readonly="1"  color="green:record_message=='Success">
                        <tree>
                            <field name="customer_id"/>
                            <field name="customer_name"/>
                            <field name="invoice_no"/>
                            <field name="status"/>
                        </tree>
                    </field>
                    <footer>
                        <button string="Ok" class="oe_highlight" special="cancel" style="width:10%"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="wizard_batch_process_message_action" model="ir.actions.act_window">
            <field name="name">Batch Process Result</field>
            <field name="res_model">batch.process.message</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <record model="ir.ui.view" id="form_view_batch_processing">
            <field name="name">Batch Processing</field>
            <field name="model">batch.processing</field>
            <field name="arch" type="xml">
                <form string="Batch Processing" create="false" edit="false">
                    <h1>Batch Processing for Invoices</h1>
                    <br></br>
                    <group>
                        <group>
                              <field name="select_customer"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <br></br>

                    <button name="search_transaction" type="object"
                    string="Refresh" class="oe_highlight"/>

                    <br></br>
                    <br></br>
                    <notebook colspan="3">
                        <page string="List" autofocus="autofocus">
                            <div class="float-right" attrs="{'invisible': [ ('transaction_history_line','=',[])]}">
                                <div class="o_setting_left_pane" style="width:20%; display:inline">
                                    <field name="send_receipt" widget="boolean"/>
                                </div>
                                <div class="o_setting_right_pane" style="width:80%; display:inline">
                                    <label for="send_receipt"/>
                                </div>
                            </div>
                            <field name="transaction_history_line" widget="batch_processing" attrs="{'invisible': [ ('transaction_history_line','=',[])]}">
                                <tree string="Invoices" editable="bottom" create="false" delete="false" limit="15">
                                    <field name="invoice_id" invisible="1"/>
                                    <field name="send_receipt" invisible="1"/>
                                    <field name="default_card_id" invisible="1"/>
                                    <field name="invoice_date" readonly="1"/>
                                    <field name="name" readonly="1"/>
                                    <field name="customer_name" readonly="1"/>
                                    <field name="customer_id" readonly="1"/>
                                    <field name="invoice_date_due" readonly="1"/>
                                    <field name="currency_id" readonly="1" invisible="1"/>
                                    <field name="amount" options="{'currency_field': 'currency_id'}" widget="monetary" readonly="1"/>
                                    <field name="amount_residual" class="after_it" options="{'currency_field': 'currency_id'}" widget="monetary" readonly="1"/>
                                    <field name="payment_method" invisible="1"/>
                                    <field name="email" readonly="1"/>
                                </tree>
                            </field>
                            <group attrs="{'invisible': [ ('transaction_history_line','!=',[])]}">
                                    <div class="o_content">
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help">
                                                <p class="o_view_nocontent_smiling_face">
                                                    No invoices found.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>
                        </page>
                        <page name="batch_log" string="Log">
                            <field name="transaction_log_lines" widget="batch_processing" attrs="{'invisible': [ ('transaction_log_lines','=',[])]}">
                                <tree string="Logs"  create="false" delete="false" limit="15">
                                    <field name="name" readonly="1"/>
                                    <field name="customer_name" readonly="1"/>
                                    <field name="customer_id" readonly="1"/>
                                    <field name="date_paid" readonly="1"/>
                                    <field name="currency_id" readonly="1" invisible="1"/>
                                    <field name="amount_paid" options="{'currency_field': 'currency_id'}" widget="monetary" readonly="1"/>
                                    <field name="payment_method" readonly="1"/>
                                    <field name="auth_code" readonly="1"/>
                                    <field name="trasaction_ref" readonly="1"/>
                                    <field name="transaction_status" readonly="1"/>
                                    <field name="email" readonly="1"/>
                                </tree>
                            </field>
                            <group attrs="{'invisible': [ ('transaction_log_lines','!=',[])]}">
                                <div class="o_content">
                                    <div class="o_view_nocontent">
                                        <div class="o_nocontent_help">
                                            <p class="o_view_nocontent_smiling_face">
                                                No record found.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

