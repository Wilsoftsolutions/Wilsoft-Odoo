<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <data noupdate="1">
            <record id="my_record_09" model="ebiz.upload.invoice">
                <field name="add_filter">0</field>
            </record>
        </data>

        <record model="ir.ui.view" id="ebiz_upload_invoices_form_view">
            <field name="name">Upload Invoices</field>
            <field name="model">ebiz.upload.invoice</field>
            <field name="arch" type="xml">
                <form string="Upload Sales Orders" create="false">
                        <h1>Upload Invoices</h1>
                        <br></br>
                        <notebook colspan="3">
                            <page string="List" autofocus="autofocus">
                                <field name="invoice_lines" widget = "upload_invoice" attrs="{'invisible': [ ('invoice_lines','=',[])]}">
                                    <tree editable="bottom" create="false" delete="false" limit="15">
                                    <!-- <field name = "name"/> -->
                                        <field name = "currency_id" invisible='1'/>
                                        <field name = "state" invisible='1'/>
                                        <field name = "invoice" string="Number"/>
                                        <field name = "partner_id" string="Customer"/>
                                        <field name = "customer_id" string="Customer ID"/>
                                        <field name = "amount_untaxed" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name = "amount_total_signed" string="Invoice Total" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name = "amount_residual_signed" string="Balance Remaining" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name = "invoice_date" string="Invoice Date"/>
                                        <field name = "invoice_date_due"/>
                                        <field name = "last_sync_date"/>
                                        <field name = "sync_status"/>
                                    </tree>
                                </field>

                                 <group attrs="{'invisible': [ ('invoice_lines','!=',[])]}">
                                    <div class="o_content" >
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help">
                                                <p class="o_view_nocontent_smiling_face">
                                                    No record found.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>
                            </page>

                            <page string="Logs">
                                <field name="logs_line" widget = "upload_invoice" attrs="{'invisible': [ ('logs_line','=',[])]}">
                                    <tree string="Transaction Lines" editable="bottom" create="false" delete="false" limit="15">
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="customer_id"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name = "amount_untaxed" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name="amount_total_signed" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name="amount_residual_signed" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name="invoice_date"/>
                                        <field name="invoice_date_due"/>
                                        <field name = "last_sync_date"/>
                                        <field name = "sync_status"/>
                                    </tree>
                                </field>
                                 <group attrs="{'invisible': [ ('logs_line','!=',[])]}">
                                    <div class="o_content" >
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help">
                                                <p class="o_view_nocontent_smiling_face">
                                                    No logs found
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>

                            </page>
                        </notebook>
                </form>
            </field>
        </record>

        <record id="action_upload_invoices_form" model="ir.actions.act_window">
            <field name="name">Upload Invoice</field>
            <field name="res_model">ebiz.upload.invoice</field>
             <field name="res_id" ref="my_record_09"/>
             <field name="target">inline</field>
            <field name='view_mode'>form</field>
        </record>

        <menuitem id="menu_ebiz_upload_invoice"
            name="Upload Invoices"
            parent="ebiz_upload_menu_main"
            action="action_upload_invoices_form"
            sequence="3"/>

<!--         <menuitem id="menu_ebiz_upload_invoice"
            name="Upload Invoices"
            parent="ebiz_upload_menu_main"
            action="action_ebiz_upload_invoices_form"
            sequence="1"/> -->

    </data>
</odoo>