<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

         <data noupdate="1">
            <record id="my_record_03" model="payment.request.bulk.email">
                <field name="add_filter">0</field>
            </record>
        </data>

        <record model="ir.ui.view" id="form_view_payment_request_bulk_email">
            <field name="name">Email Pay for Invoices</field>
            <field name="model">payment.request.bulk.email</field>
            <field name="arch" type="xml">
                <form string="Email Pay for Invoices" create="false">
                        <h1>Email Pay for Invoices</h1>
                        <br></br>
                        <group>
                            <group>
                                  <field name="select_customer"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <br></br>


                        <button name="search_transaction" type="object"
                        string="Refresh" class="oe_highlight"/>

                        <br></br>
                        <br></br>
                        <notebook colspan="3">
                            <page string="Send New" autofocus="autofocus">
                                <field name="transaction_history_line" widget="email_pay_invoices" attrs="{'invisible': [ ('transaction_history_line','=',[])]}">
                                    <tree string="Transaction Lines" editable="bottom" create="false" delete="false" limit="15">
                                        <field name="currency_id" readonly="1" invisible="1"/>
                                        <field name="invoice_id" invisible="1"/>
                                        <field name="name" readonly="1"/>
                                        <field name="customer_name" readonly="1"/>
                                        <field name="customer_id" readonly="1"/>
                                        <field name="amount" options="{'currency_field': 'currency_id'}" widget="monetary" readonly="1"/>
                                        <field name="amount_due" options="{'currency_field': 'currency_id'}" widget="monetary" readonly="1"/>
                                        <field name="invoice_date" readonly="1"/>
                                        <field name="invoice_due_date" readonly="1"/>
                                        <field name="email_id" readonly="1"/>
                                    </tree>
                                </field>
                                <group attrs="{'invisible': [ ('transaction_history_line','!=',[])]}">
                                    <div class="o_content">
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help">
                                                <p class="o_view_nocontent_smiling_face">
                                                    No records found
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>
                            </page>

                            <page string="Pending Requests">
                                <field name="transaction_history_line_pending" widget="email_pay_invoices" attrs="{'invisible': [ ('transaction_history_line_pending','=',[])]}">
                                    <tree string="Transaction Lines" editable="bottom" create="false" delete="false" limit="15">
                                        <field name="currency_id" readonly="1" invisible="1"/>
                                        <field name="invoice_id" invisible="1"/>
                                        <field name="name" readonly="1"/>
                                        <field name="customer_name" readonly="1"/>
                                        <field name="customer_id" readonly="1"/>
                                        <field name="amount" options="{'currency_field': 'currency_id'}" widget="monetary" readonly="1"/>
                                        <field name="amount_due" options="{'currency_field': 'currency_id'}" widget="monetary" readonly="1"/>
                                        <field name="email_requested_amount" options="{'currency_field': 'currency_id'}" widget="monetary" readonly="1"/>
                                        <field name="invoice_date" readonly="1"/>
                                        <field name="invoice_due_date" readonly="1"/>
                                        <field name="email_id" readonly="1"/>
                                        <field name="date_and_time_Sent" readonly="1"/>
                                        <field name="over_due_status" readonly="1"/>
                                        <field name="no_of_times_sent" readonly="1"/>
                                    </tree>
                                </field>
                                <group attrs="{'invisible': [ ('transaction_history_line_pending','!=',[])]}">
                                    <div class="o_content">
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help">
                                                <p class="o_view_nocontent_smiling_face">
                                                    No pending requests found
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>
                            </page>

                            <page string="Received Email Payments">
                                <field name="transaction_history_line_received" widget="email_pay_invoices" attrs="{'invisible': [ ('transaction_history_line_received','=',[])]}">
                                    <tree string="Transaction Lines" editable="bottom" create="false" delete="false" limit="15">
                                        <field name="currency_id" readonly="1" invisible="1"/>
                                        <field name="invoice_id" invisible="1"/>
                                        <field name="payment_request_date_time" readonly="1"/>
                                        <field name="name" readonly="1"/>
                                        <field name="customer_name" readonly="1"/>
                                        <field name="customer_id" readonly="1"/>
                                        <field name="amount" options="{'currency_field': 'currency_id'}" widget="monetary" readonly="1"/>
                                        <field name="paid_amount" options="{'currency_field': 'currency_id'}" widget="monetary" readonly="1"/>
                                        <field name="payment_method" readonly="1"/>
                                        <field name="ref_num" readonly="1"/>
                                    </tree>
                                </field>
                                <group attrs="{'invisible': [ ('transaction_history_line_received','!=',[])]}">
                                    <div class="o_content">
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help">
                                                <p class="o_view_nocontent_smiling_face">
                                                    No received email payments found
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>
                            </page>
                        </notebook>
                </form>

            </field>
        </record>


    </data>
</odoo>