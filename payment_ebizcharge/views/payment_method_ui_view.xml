         <data noupdate="1">
            <record id="my_record_04" model="payment.method.ui">
                <field name="add_filter">0</field>
            </record>
        </data>



        <record model="ir.ui.view" id="form_view_request_payment_method_ui">
            <field name="name">Request Payment Methods</field>
            <field name="model">payment.method.ui</field>
            <field name="arch" type="xml">
                <form string="Request Payment Methods" create="false">
                        <h1>Request Payment Methods</h1>
                        <br></br>
                        <notebook colspan="3">
                            <page string="Send Requests" autofocus="autofocus">
                                <group col="2">
                                    <group>
                                        <field name="customer_selection" style="height:27px;"/>
                                    </group>
                                    <group>
                                        <button name="search_customers" type="object" style="height: 25px;padding-top: 3px;" string="Refresh" class="oe_highlight"/>
                                    </group>
                                </group>
                                <group col="4" attrs="{'invisible': [ ('transaction_history_line','=',[])]}">
                                    <group></group>
                                    <group></group>
                                    <group></group>
                                </group>
                                <field name="transaction_history_line" widget="checkbox_many2many" attrs="{'invisible': [ ('transaction_history_line','=',[])]}">
                                    <tree string="Transaction Lines" editable="bottom" create="false" delete="false" limit="15">
                                        <field name="customer_name" readonly="1"/>
                                        <field name="customer_id" readonly="1"/>
                                        <field name="customer_phone" readonly="1"/>
                                        <field name="email_id" readonly="1"/>
                                        <field name="customer_city" readonly="1"/>
<!--                                        <button name="viewPaymentMethods" string="View Payment Methods" type="object" class="btn-link"/>-->
                                    </tree>
                                </field>
                                <group attrs="{'invisible': [ ('transaction_history_line','!=',[])]}">
                                    <div class="o_content">
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help" >
                                                <p class="o_view_nocontent_smiling_face">
                                                    No customer(s) found.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>
                            </page>

                            <page string="Pending Requests">
                                <group col="3">
                                    <group>
                                        <field name="start_date"/>
                                    </group>
                                    <group>
                                        <field name="end_date"/>
                                    </group>
                                    <group>
                                        <button name="search_pending_payments" type="object"
                                                style="height: 23px;padding-top: 1px;" string="Refresh" class="oe_highlight"/>
                                    </group>
                                </group>
                                <group col="4" attrs="{'invisible': [ ('transaction_history_line_pending','=',[])]}">
                                    <group>
                                    </group>
                                    <group></group>
                                    <group></group>
<!--                                    <group>-->
<!--                                        <button name="resend_email" type="object"-->
<!--                                                                string="Resend Request" class="oe_highlight"/>-->
<!--                                        <button name="delete_invoice" type="object"-->
<!--                                                                string="Remove From List" class="oe_highlight"/>-->

<!--                                    </group>-->

                                </group>
                                <field name="transaction_history_line_pending" widget="checkbox_many2many" attrs="{'invisible': [ ('transaction_history_line_pending','=',[])]}">
                                    <tree string="Transaction Lines" editable="bottom" create="false" delete="false" limit="15">
                                        <field name="customer_name" readonly="1"/>
                                        <field name="customer_id" readonly="1"/>
                                        <field name="email_id" readonly="1"/>
                                        <field name="date_time" readonly="1"/>
                                        <field name="payment_internal_id" invisible="1"/>
                                        <field name="no_of_times_sent" readonly="1"/>
                                    </tree>
                                </field>
                                <group attrs="{'invisible': [ ('transaction_history_line_pending','!=',[])]}">
                                    <div class="o_content">
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help">
                                                <p class="o_view_nocontent_smiling_face">
                                                    No pending requests found.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>
                            </page>

                            <page string="Added Payment Methods">
                                <group col="3">
                                    <group>
                                        <field name="start_date_received"/>
                                    </group>
                                    <group>
                                        <field name="end_date_received"/>
                                    </group>
                                    <group>
                                        <button name="search_received_payments" type="object"
                                                style="height: 23px;padding-top: 1px;" string="Refresh" class="oe_highlight"/>
                                    </group>
                                </group>
                                <group col="4" attrs="{'invisible': [ ('transaction_history_line_received','=',[])]}">
                                    <group>
                                    </group>
                                    <group></group>
                                    <group></group>
                                </group>
                                <field name="transaction_history_line_received" widget="checkbox_many2many" attrs="{'invisible': [ ('transaction_history_line_received','=',[])]}">
                                    <tree string="Transaction Lines" editable="bottom" create="false" delete="false" limit="15">
                                        <field name="customer_name" readonly="1"/>
                                        <field name="customer_id" readonly="1"/>
                                        <field name="email_id" readonly="1"/>
                                        <field name="date_time" readonly="1"/>
                                        <field name="payment_method" readonly="1"/>
                                        <field name="payment_internal_id" invisible="1"/>
                                        <field name="customer_token" invisible="1"/>

                                    </tree>
                                </field>
                                <group attrs="{'invisible': [ ('transaction_history_line_received','!=',[])]}">
                                    <div class="o_content">
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help">
                                                <p class="o_view_nocontent_smiling_face">
                                                    No payment methods found.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>
                            </page>
                        </notebook>
                        <br></br>
                        <br></br><br></br>
                        <br></br><br></br>
                        <br></br><br></br>
                </form>
            </field>
        </record>


    </data>
