<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <data noupdate="1">
            <record id="my_record_07" model="upload.products">
                <field name="add_filter">0</field>
            </record>
        </data>

        <record model="ir.ui.view" id="form_view_action_upload_products">
            <field name="name">Upload Products</field>
            <field name="model">upload.products</field>
            <field name="arch" type="xml">
                <form string="Upload Products" create="false">
                        <h1>Upload Products</h1>
                        <br></br>
                        <notebook colspan="3">
                            <page string="List" autofocus="autofocus">
                                <field name="transaction_history_line" widget="upload_products" attrs="{'invisible': [ ('transaction_history_line','=',[])]}">
                                    <tree string="Products List" editable="bottom" create="false" delete="false" limit="15">
                                        <field name="internal_reference"/>
                                        <field name="product_name"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="sales_price" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name="cost" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name="quantity"/>
                                        <field name="type"/>
                                        <field name="last_sync_date"/>
                                        <field name="sync_status"/>
                                    </tree>
                                </field>
                                <group attrs="{'invisible': [ ('transaction_history_line','!=',[])]}">
                                    <div class="o_content" >
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help">
                                                <p class="o_view_nocontent_smiling_face">
                                                    No record found.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>
                            </page>

                            <page string="Logs">
                                <field name="logs_line" widget="upload_products" attrs="{'invisible': [ ('logs_line','=',[])]}">
                                    <tree string="Products Logs" editable="bottom" create="false" delete="false" limit="15">
                                        <field name="internal_reference"/>
                                        <field name="name"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="sales_price" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name="cost" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name="quantity"/>
                                        <field name="type"/>
                                        <field name="last_sync_date"/>
                                        <field name="sync_status"/>
                                    </tree>
                                </field>
                                <group attrs="{'invisible': [ ('logs_line','!=',[])]}">
                                    <div class="o_content" >
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help">
                                                <p class="o_view_nocontent_smiling_face">
                                                    No logs found.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>
                            </page>
                        </notebook>
                </form>
            </field>
        </record>

        <record id="action_upload_products" model="ir.actions.act_window">
            <field name="name">Upload Products</field>
            <field name="res_model">upload.products</field>
            <field name="res_id" ref="my_record_07"/>
             <field name="target">inline</field>
            <field name='view_mode'>form,tree</field>
        </record>


        <menuitem id="menu_ebiz_uplode_product_template"
            name="Upload Products"
            parent="ebiz_upload_menu_main"
            action="action_upload_products"
            sequence="4"/>

    </data>
</odoo>