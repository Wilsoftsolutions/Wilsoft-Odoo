<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <data noupdate="1">
            <record id="my_record_06" model="upload.sale.orders">
                <field name="add_filter">0</field>
            </record>
        </data>

        <record model="ir.ui.view" id="form_view_request_upload_sale_orders">
            <field name="name">Upload Sales Orders</field>
            <field name="model">upload.sale.orders</field>
            <field name="arch" type="xml">
                <form string="Upload Sales Orders" create="false">
                        <h1>Upload Sales Orders</h1>
                        <br></br>
                        <notebook colspan="3">
                            <page string="List" autofocus="autofocus">
                                <field name="transaction_history_line" widget="upload_salesorder" attrs="{'invisible': [ ('transaction_history_line','=',[])]}">
                                    <tree string="Transaction Lines" editable="bottom" create="false" delete="false" limit="15">
                                        <field name="currency_id" invisible="1"/>
                                        <field name="order_no" readonly="1"/>
                                        <field name="customer_name" readonly="1"/>
                                        <field name="customer_id" readonly="1"/>
                                        <field name="amount_total" readonly="1" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name="amount_due" readonly="1" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name="order_date" readonly="1"/>
                                        <field name="last_sync_date" readonly="1"/>
                                        <field name="sync_status" readonly="1"/>
                                    </tree>
                                </field>

                                <group attrs="{'invisible': [ ('transaction_history_line','!=',[])]}">
                                    <div class="o_content" >
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help">
                                                <p class="o_view_nocontent_smiling_face">
                                                    No record found.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>

                            </page>

                            <page string="Logs">
                                <field name="logs_line" widget="upload_salesorder" attrs="{'invisible': [ ('logs_line','=',[])]}">
                                    <tree string="Transaction Lines" editable="bottom" create="false" delete="false" limit="15">
                                        <field name="currency_id" invisible="1"/>
                                        <field name="order_no" readonly="1"/>
                                        <field name="customer_name" readonly="1"/>
                                        <field name="customer_id" readonly="1"/>
                                        <field name="amount_total" readonly="1" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name="amount_due" readonly="1" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                                        <field name="order_date" readonly="1"/>
<!--                                        <field name="user_id" readonly="1"/>-->
                                        <field name="last_sync_date" readonly="1"/>
                                        <field name="sync_status" readonly="1"/>
                                    </tree>
                                </field>

                                <group attrs="{'invisible': [ ('logs_line','!=',[])]}">
                                    <div class="o_content" >
                                        <div class="o_view_nocontent">
                                            <div class="o_nocontent_help">
                                                <p class="o_view_nocontent_smiling_face">
                                                    No logs found
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </group>

                            </page>
                        </notebook>
                </form>
            </field>
        </record>

        <record id="action_res_partner_upload_sale_orders" model="ir.actions.act_window">
            <field name="name">Upload Sales Orders</field>
            <field name="res_model">upload.sale.orders</field>
             <field name="res_id" ref="my_record_06"/>
             <field name="target">inline</field>
            <field name='view_mode'>form,tree</field>
        </record>


        <menuitem id="menu_ebiz_upload_sale_orders"
            name="Upload Sales Orders"
            parent="ebiz_upload_menu_main"
            action="action_res_partner_upload_sale_orders"
            sequence="1"/>

    </data>
</odoo>