                    <h2>eCommerce Settings</h2>
                    <div class="row mt16 o_settings_container oe_hidden" >
   
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div >
                                <label for="ebiz_website_allowed_command"/>
                            </div>
                            <!-- <div class="o_setting_right_pane"> -->
                                <field name="ebiz_website_allowed_command" widget='radio'/>
                            <!-- </div> -->
                            
                        </div>
   
                    </div>
                    <field name = "is_website_installed" invisible = '1'/>

                    <h2>Document Download</h2>
                    <div class="row mt16 o_settings_container oe_hidden" >

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                               <label for="ebiz_document_download_range"/>
                                <div class="text-muted">
                                    <field name="ebiz_document_download_range" />
                                </div>
                            </div>


                        </div>

                    </div>
                    
                    <h2>Scheduled Actions Settings</h2>
                    <div class="o_control_panel">

                            <group>
                                <group>
                                    <div class="o_setting_right_pane">
                                    <field name="invoice_cron_job"/>
                                    <label for="invoice_cron_job" style="font-weight:bold;"/>
                                        <div class="text-muted" style="margin-left:23px">
                                            Schedule received payments to automatically apply.
                                        </div>
                                </div>
                                </group>

                            </group>

                        <group class="o_setting_box col-12" col="4" attrs="{'invisible':[('invoice_cron_job','=',False)]}">
                                <group>
                                    <field name="interval_number_invoice"/>
                                </group>
                                <group>
                                    <field name="interval_unit_invoice"/>
                                </group>
                                <group>
                                    <field name="next_execution_date_invoice"/>
                                </group>
                                <group>
                                    <field name="time_zone"/>
                                </group>
                        </group>
                        <group col="3" attrs="{'invisible':[('invoice_cron_job','=',False)]}">
                                <group>
                                </group>
                                <group>
                                </group>

                                <group>
                                    <div align="center">

                                    <div attrs="{'invisible': [('scheduler_act_deact','!=',False)]}">

                                        <button name="activate_invoice_cron_job"  string="Activate" type="object"
                                        class="oe_highlight"/>
                                    </div>
                                    <div attrs="{'invisible': [('scheduler_act_deact','!=',True)]}">
                                        <button name="deactivate_invoice_cron_job"  string="Deactivate" type="object"
                                        class="oe_highlight"/>
                                    </div>
                                    </div>
<!--                                    <div>-->
<!--                                        <button name="view_scheduled_actions" string=" Scheduled Actions" type="object"-->
<!--                                        class="oe_highlight" icon="fa-desktop" style="height: 25px;padding-top: 3px;"/>-->
<!--                                    </div>-->
                                </group>
                        </group>
                    </div>
                    <!-- <h2 attrs = "{'invisible':[('is_website_installed','=', False)]}">Multi Website Config</h2>
                    <div attrs = "{'invisible':[('is_website_installed','=', False)]}" class="row mt16 o_settings_container oe_hidden" > -->
                        <!-- <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                               <label for="ebiz_website_id"/>
                                <div class="text-muted">
                                    <field name="ebiz_website_id" widget="selection" options="{'no_create': True}"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                               <label for="ebiz_website_security_token"/>
                                <div class="text-muted">
                                    <field name="ebiz_website_security_token"/>
                                </div>
                            </div>
                        </div> -->
<!--                         <field name = "ebiz_website_ids">
                            <tree create="0" delete="1" editable="bottom">
                                <field name = "name" readonly="1"/>
                                <field name = "ebiz_security_key"/>
                                <field name = "ebiz_username"/>
                                <field name = "ebiz_password"/>
                            </tree>
                        </field> -->
                    <!-- </div> -->

                </div>
            </xpath>
        </field>
    </record>


    <record id="website_settings_test" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.payment_ebizcharge</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="webmaster_settings" position="after">
                <h2>EBizCharge Setup</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="ebiz_add_New"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Add New</span>
                            <span class="fa fa-lg fa-globe" title="Values set here are website-specific." groups="website.group_multi_website"/>
                            <div class="text-muted">
                                Here you can enter credentials for selected website.
                            </div>
                            <div class="content-group" attrs="{'invisible':[('ebiz_add_New','=',False)]}">
                                <div class="row mt16">
                                    <label for="ebiz_security_key_web" string="Security ID" class="col-lg-4 o_light_label"/>
                                    <field name="ebiz_security_key_web" widget="field_masking" placeholder="Security ID" attrs="{'required':[('ebiz_add_New','=',True)]}" />
                                </div>
                                <div class="row mt10">
                                    <label for="ebiz_user_id_web" string="User ID" class="col-lg-4 o_light_label"/>
                                    <field name="ebiz_user_id_web" placeholder="User ID"/>
                                </div>
                                <div class="row mt10">
                                    <label for="ebiz_password_web" string="Password" class="col-lg-4 o_light_label"/>
                                    <field name="ebiz_password_web" password="1" placeholder="Password" />
                                </div>
                                <div class="row mt10">
                                    <label for="ebiz_default_web" string="Set as Default" class="col-lg-4 o_light_label"/>
                                    <field name="ebiz_default_web"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 o_setting_box" attrs="{'invisible':[('ebiz_default_web','=',True)]}">
                        <div class="o_setting_left_pane">
                            <field name="ebiz_use_defaults"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Use Default</span>
                            <div class="text-muted">
                                You can select existing default settings for this website.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <a href="https://ebizcharge.com" target="_new">
                                <i class="fa fa-fw fa-arrow-right"/>How to Get Credentials</a>
                         </div>
                    </div>
                </div>
            </div>
        </field>
    </record>


    <record id="action_ebizcharge_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'payment_ebizcharge', 'bin_size': False}</field>
    </record>

    <menuitem id="menu_sale_general_settings"
        name="Settings"
        parent="ebizcharge_menu_root"
        sequence="7"
        action="action_ebizcharge_config_settings"
        groups="base.group_system"/>

</odoo>
