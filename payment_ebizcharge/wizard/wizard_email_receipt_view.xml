<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
         <record id="send_email_receipt_wizard" model="ir.ui.view">
            <field name="name">Email Receipts</field>
            <field name="model">wizard.email.receipts</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Email Reciept" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="contacts_to" widget="many2many_tags" readonly="context.get('default_selection_check', True)"/>
                                <field name="email_customer" invisible="context.get('default_selection_check')" readonly='0' required="1"/>
                                <br></br>
                                <field name="record_id" invisible="1"/>
                                <field name="model_name" invisible="1"/>

                                <field name="multiple_ref_num" readonly="0" required="1" widget="many2many_tags"
                                       domain="[('invoice_id','=',record_id)]" options="{'no_create_edit':True}"/>

                                <field name="select_template" required="1" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
                                <field name="email_subject" readonly="1"/>



                            </group>
                        </group>
                    </sheet>
                    <footer>
                            <button name="send_email" type="object" string="Send Email" class="oe_highlight" />
                            <button string="Cancel" special="cancel" style="width:10%"/>
                    </footer>
                </form>
            </field>
        </record>



        <record id="send_email_receipt_wizard_bulk" model="ir.ui.view">
            <field name="name">Email Receipts</field>
            <field name="model">wizard.email.receipts.bulk</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Email Reciept" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>

                                <br></br>

                                <field name="select_template" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
                                <field name="email_subject" readonly="1"/>

                            </group>
                        </group>
                    </sheet>
                    <footer>
                            <button name="send_email" type="object" string="Send Email" class="oe_highlight" />
                            <button string="Cancel" special="cancel" style="width:10%"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>