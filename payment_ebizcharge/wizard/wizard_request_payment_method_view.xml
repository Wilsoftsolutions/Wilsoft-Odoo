<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
         <record id="wizard_ebiz_request_payment_method_view" model="ir.ui.view">
            <field name="name">Request Payment Method</field>
            <field name="model">wizard.ebiz.request.payment.method</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Request Payment Method" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" widget="many2many_tags" readonly="context.get('default_selection_check', True)"/>
                                <field name="email" invisible="context.get('default_selection_check')" required='1'/>
                                <field name="payment_method_type" required='1' />
                                <br></br>
                                <field name="select_template" required="1" domain="[('template_type_id', '=', 'AddPaymentMethodFormEmail')]" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
                                <field name="subject"/>
                                <field name="email_note"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                            <button name="send_email" type="object" string="Send Request" class="oe_highlight" />
                            <button string="Cancel" special="cancel" style="width:10%"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_wizard_ebiz_request_payment_method" model="ir.actions.act_window">
            <field name="name">Request Payment Method</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.ebiz.request.payment.method</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_ebiz_request_payment_method_view"/>
            <field name="target">new</field>
        </record>


        <record id="wizard_ebiz_request_payment_method_view_bulk" model="ir.ui.view">
            <field name="name">Request Payment Method</field>
            <field name="model">wizard.ebiz.request.payment.method.bulk</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Request Payment Method" create="false" edit="false">
                    <sheet>
                        <div>
                            <div class="row">
                                <div class="col-6">
                                    <div>
                                        <label for="partner_id" string="Customers"/>
                                        <br/>
                                        <field name="partner_id" options="{'no_open': True}" nolabel="1" widget="make_editable">
                                            <tree editable="bottom"  edit="1" create="false">
                                                <field name="id" invisible="1"/>
                                                <field name="name" />
                                                <field name="email"/>
                                            </tree>
                                        </field>


                                    </div>
                                </div>
                                <div class="col-6">
                                    <group>
                                         <field name="payment_method_type" required='1' />
                                        <br></br>
                                        <field name="select_template" required="1" domain="[('template_type_id', '=', 'AddPaymentMethodFormEmail')]" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
                                        <field name="subject"/>
                                        <field name="email_note"/>
                                    </group>

                                </div>
                            </div>
                        </div>
                    </sheet>
                    <footer>
                            <button name="send_email" type="object" string="Send Request" class="oe_highlight" />
                            <button string="Cancel" special="cancel" style="width:10%"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_wizard_ebiz_request_payment_method_bulk" model="ir.actions.act_window">
            <field name="name">Request Payment Method</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.ebiz.request.payment.method.bulk</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_ebiz_request_payment_method_view_bulk"/>
            <field name="target">new</field>
        </record>


    </data>
</odoo>