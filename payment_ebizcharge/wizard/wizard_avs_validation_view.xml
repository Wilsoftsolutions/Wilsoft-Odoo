 <odoo>
    <data>
        <record id="view_ebiz_transaction_validtion_form" model="ir.ui.view">
            <field name="name">wizard.order.process.transaction</field>
            <field name="model">wizard.ebiz.transaction.validation</field>
            <field name="arch" type="xml" >
                <form style="color:red">
                <!-- <form string="Security Mismatch" style="color:red"> -->
                    <field name="check_avs_match" readonly = '1' invisible="1" />
                    <field name="is_card_denied" invisible="1" />
                    <field name="full_amount_avs" invisible="1" />
                    <group attrs = "{'invisible':['|', ('check_avs_match', '=',True),('is_card_denied','=', True)]}">                        
                        <field name="address" readonly = '1' attrs="{'invisible': [('address','in','Match')]}" style="color:red"/>
                        <field name="address" readonly = '1' attrs="{'invisible': [('address','not in','Match')]}"/>
                        <field name="zip_code" readonly = '1'  attrs="{'invisible': [('zip_code','in','Match')]}" style="color:red"/>
                        <field name="zip_code" readonly = '1' attrs="{'invisible': [('zip_code','not in','Match')]}"/>
                        <field name="card_code" readonly = '1'  attrs="{'invisible': [('card_code','in','Match')]}" style="color:red"/>
                        <field name="card_code" readonly = '1' attrs="{'invisible': [('card_code','not in','Match')]}"/>
                    </group>
                    <p attrs = "{'invisible':['|', ('check_avs_match', '=',True),('is_card_denied','=', True)]}">
                        This transaction was successfully processed, but it could result in a chargeback.
                        <br/>
                        Do you still wish to accept?
                    </p>
                    <p attrs = "{'invisible':[('is_card_denied', '!=',True)]}">
                        Transection Declined with a reason (<field name="denied_message" nolabel="1" readonly="1"/>)
                    </p>
                    <footer>
                        <button string="Update Info and Retry" class="oe_highlight" name = "update_and_retry" type="object" attrs = "{'invisible':['|', ('check_avs_match', '=',True), ('full_amount_avs', '=',True)]}" />
                        <button string="Accept Transaction Anyway" class="oe_highlight" name="procceed_with_transaction" type="object" attrs = "{'invisible':['|', ('check_avs_match', '=',True),('is_card_denied','=', True)]}"/>
                        <button string="Cancel Transaction" class="oe_highlight" type="object"  name="void_transaction" attrs = "{'invisible':[('check_avs_match', '=',True)]}"/>
                        <button string="OK" class="oe_highlight" special = "cancel" attrs = "{'invisible':[('check_avs_match', '=', False)]}"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_ebiz_transaction_validtion_form" model="ir.actions.act_window">
            <field name="name">Security Mismatch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.ebiz.transaction.validation</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ebiz_transaction_validtion_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>