 <odoo>
    <data>
        <record id="wizard_card_expiring_view" model="ir.ui.view">
            <field name="name">Are you Sure?</field>
            <field name="model">wizard.cards.expiring.soon</field>
            <field name="arch" type="xml" >
                <form string="Add New Card">
                    <div align="center">
                    <group>
                        <span class="panelcontent" align="center">
                            Displaying only customers with cards expiring soon may take several minutes to load.
                            Are you sure you'd like to apply this  filter?
                        </span>
                    </group>
                    <br/>
                    <br/>
                    <group>
                        <group>
                            <field name="date_selection"></field>
                            <br/>
                            <br/>
                                <field name="no_of_days" attrs="{'invisible': [('date_selection', '!=', 'specific_days')]}"></field>
                        </group>
                    </group>
                    </div>

                    <footer>
                        <div align="right">
                            <button string="Apply" class="oe_highlight" name = "apply_filters" type="object"
                                    style="margin-right: 30px !important;padding-right: 15px !important;padding-left: 15px !important;"/>
                            <button string="Cancel" special="cancel" />
                        </div>

                    </footer>
                </form>
            </field>
        </record>

        <record id="action_card_expiring_soon" model="ir.actions.act_window">
            <field name="name">Are you Sure?</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.cards.expiring.soon</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_card_expiring_view"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>