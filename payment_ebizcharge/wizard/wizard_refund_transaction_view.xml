<odoo>
    <data>
        <record id="view_process_credit_transaction_form" model="ir.ui.view">
            <field name="name">wwizard.process.credit.transaction.form</field>
            <field name="model">wizard.process.credit.transaction</field>
            <field name="arch" type="xml" >
                <form string="Process Credit Transaction">
                    <group><field name="sale_order_id" invisible="1"/>
                        <field name="invoice_id" invisible="1"/>
                        <!-- <field name="picking_id" invisible="1"/> -->
                        <field name="partner_id" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="amount" readonly="1" options="{'currency_field': 'currency_id'}" widget="monetary"/>
                        
                        <field name='method_id' domain="[('partner_id','=',partner_id)]"/>
                        
                    </group>

                    <footer>
                        <button string="Process Payment" class="oe_highlight" type="object" name="process_credit_transaction"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_process_credit_transaction" model="ir.actions.act_window">
            <field name="name">Process Credit Transaction</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.process.credit.transaction</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_process_credit_transaction_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>