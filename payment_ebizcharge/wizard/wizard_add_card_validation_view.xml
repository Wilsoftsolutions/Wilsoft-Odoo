 <odoo>
    <data>
        <record id="wizard_view_add_card_validation" model="ir.ui.view">
            <field name="name">wizard.order.process.transaction</field>
            <field name="model">wizard.add.card.validation</field>
            <field name="arch" type="xml" >
                <form style="color:red">
                <!-- <form string="Security Mismatch" style="color:red"> -->
                    <field name="check_avs_match" invisible="1" />
                    <field name="is_card_denied" invisible="1" />
                    <group attrs = "{'invisible':[('is_card_denied', '=',True)]}">                        
                        <field name="address" readonly = '1' attrs="{'invisible': [('address','in','Match')]}" style="color:red"/>
                        <field name="address" readonly = '1' attrs="{'invisible': [('address','not in','Match')]}"/>
                        <field name="zip_code" readonly = '1'  attrs="{'invisible': [('zip_code','in','Match')]}" style="color:red"/>
                        <field name="zip_code" readonly = '1' attrs="{'invisible': [('zip_code','not in','Match')]}"/>
                        <field name="card_code" readonly = '1'  attrs="{'invisible': [('card_code','in','Match')]}" style="color:red"/>
                        <field name="card_code" readonly = '1' attrs="{'invisible': [('card_code','not in','Match')]}"/>
                    </group>
                    <p attrs = "{'invisible':[('is_card_denied', '!=',True)]}">
                        Transection Declined with a reason (<field name="denied_message" nolabel="1" readonly="1"/>) 
                    </p>
                    <p attrs = "{'invisible':[('is_card_denied', '=',True)]}">
                        Our card verification indicates this card could result in chargeback when used in future transactions.
                        <br/>
                        Do you still wish to save this card? If not, go back and enter different card information. 
                    </p>
                    <footer>
                        <button string="Update Info and Retry" class="oe_highlight" name = "update_and_retry" type="object"/>
                        <button string="Accept Card Anyway" class="oe_highlight" name="save_card_anyway" type="object" attrs = "{'invisible':[('is_card_denied', '=',True)]}"/>
                        <!-- <button string="Cancel" special="cancel"/> -->
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_view_add_card_validation" model="ir.actions.act_window">
            <field name="name">Security Mismatch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.add.card.validation</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_view_add_card_validation"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>