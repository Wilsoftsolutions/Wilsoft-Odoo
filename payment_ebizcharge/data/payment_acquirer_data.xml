<?xml version="1.0" encoding="utf-8"?>

<data noupdate="1">

    <record id="payment_acquirer_ebizcharge" model="payment.acquirer">
        <field name="name">EBizCharge</field>
        <field name="display_as">EBizCharge</field>
        <field name="image_128"
               type="base64"
               file="payment_ebizcharge/static/src/img/ebiz_icon.png"/>
        <field name="module_id" ref="base.module_payment_ebizcharge"/>
        <field name="description" type="html">
            <p>
                A payment gateway to accept online payments via cards and bank accounts.
            </p>
            <ul class="list-inline">
                <li class="list-inline-item"><i class="fa fa-check"/>Online Payment through Odoo</li>
                <li class="list-inline-item"><i class="fa fa-check"/>Online Payment through EBizCharge</li>
                <li class="list-inline-item"><i class="fa fa-check"/>Save/Update/Delete Cards</li>
                <li class="list-inline-item"><i class="fa fa-check"/>Save/Update/Delete Bank Accounts</li>
                <li class="list-inline-item"><i class="fa fa-check"/>View List of Transactions.</li>
            </ul>
        </field>
        <field name="payment_icon_ids"
               eval="[(6, 0, [
                   ref('payment.payment_icon_cc_maestro'),
                   ref('payment.payment_icon_cc_mastercard'),
                   ref('payment.payment_icon_cc_discover'),
                   ref('payment.payment_icon_cc_jcb'),
                   ref('payment.payment_icon_cc_visa'),
               ])]"/>
    </record>

    <record id="payment_ebizcharge.payment_acquirer_ebizcharge" model="payment.acquirer">
        <field name="provider">ebizcharge</field>
        <field name="inline_form_view_id" ref="inline_form"/>
        <field name="support_authorization">True</field>
        <field name="support_fees_computation">False</field>
        <field name="support_refund"></field>
        <field name="support_tokenization">True</field>
        <field name="allow_tokenization">True</field>
    </record>

    <record id="payment_method_ebizcharge" model="account.payment.method">
        <field name="name">EBizCharge</field>
        <field name="code">ebizcharge</field>
        <field name="payment_type">inbound</field>
    </record>

    <record id="payment_method_ebizcharge_out" model="account.payment.method">
        <field name="name">EBizCharge</field>
        <field name="code">ebizcharge</field>
        <field name="payment_type">outbound</field>
    </record>

<!--    <record id="account_payment_method_electronic_in" model="account.payment.method">-->
<!--        <field name="name">Electronic</field>-->
<!--        <field name="code">electronic</field>-->
<!--        <field name="payment_type">outbound</field>-->
<!--    </record>-->
    <record id="sequence_advance_payment_transaction" model="ir.sequence">
        <field name="name">Advance Payment Transaction</field>
        <field name="code">advance.payment.transaction</field>
        <field name="prefix">TX.ADV/%(range_year)s/</field>
        <field eval="1" name="number_next"/>
        <field eval="1" name="number_increment"/>
        <field eval="True" name="use_date_range"/>
        <field eval="False" name="company_id"/>
        <field name="padding">4</field>
    </record>
</data>

